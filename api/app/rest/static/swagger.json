{
  "swagger": "2.0",
  "info": {
    "description": "API para disponibilização de alguns dados coletados do Siconv e reaorganizados em um novo modelo de dados mais simples.",
    "version": "2.0.0",
    "title": "Dados do Siconv",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "security": [
    {
      "api_key": []
    }
  ],
  "basePath": "/rest",
  "paths": {
    "/data_atual": {
      "get": {
        "tags": [
          "Data atual"
        ],
        "summary": "Retorna a data da última atualização.",
        "produces": [
          "plain/text"
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Uma informação de autorização válida deve ser informada."
          },
          "500": {
            "description": "Ocorreu um erro interno não especificado."
          }
        }
      }
    },
    "/tables/{fileType}/{tableName}": {
      "get": {
        "tags": [
          "Tabelas"
        ],
        "summary": "Retorna um arquivo csv compactado com gzip contendo os dados da tabela selecionada.",
        "produces": [
          "application/gzip"
        ],
        "parameters": [
          {
            "name": "fileType",
            "in": "path",
            "description": "Tipo de arquivo",
            "required": true,
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": [
                       "csv",
                       "parquet"
                      ]
            }
          },
          {
            "name": "tableName",
            "in": "path",
            "description": "Nome da tabela",
            "required": true,
            "type": "array",
            "uniqueItems": true,
            "items": {
              "type": "string",
              "enum": [
                       "calendario",
                       "convenios",
                       "emendas",
                       "emendas_convenios",
                       "fornecedores",
                       "licitacoes",
                       "movimento",
                       "municipios",
                       "proponentes"
                      ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "A requisão foi mal formulada."
          },
          "401": {
            "description": "Uma informação de autorização válida deve ser informada."
          },
          "404": {
            "description": "A tabela requisitada não está disponível."
          },
          "500": {
            "description": "Ocorreu um erro interno não especificado."
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "api_key": {
      "type": "apiKey",
      "name": "X-API-KEY",
      "in": "header"
    }
  }
}